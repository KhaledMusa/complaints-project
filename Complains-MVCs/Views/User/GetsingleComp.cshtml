@model Complains_MVCs.Models.FileComp

@{
    ViewData["Title"] = "CheckedComp";
    Layout = "~/Views/Shared/_Layout.cshtml";
  
}
<h1>View</h1>


<hr />
<div class="row">
    <h1 class="text-center border bg-info">Complaint</h1>
    <div class="col-md-3">
       


            
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control"   />

            </div>
            <div class="form-group">
                <label asp-for="ContentType" class="control-label"></label>
                <input asp-for="ContentType" class="form-control"   />

            </div>
            
            
            <div class="form-group">
                <label asp-for="fileUp" class="control-label">Image</label>

            <br />
                <a href="~/Uploads/@Model.fileName" download>
                        <span class="btn btn-primary">
                            @Model.fileName - DownLoad
                        </span>
                    
                    </a>
               
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" disabled  />

            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" disabled  />

            </div>
            <br />
        
        
    </div >

    <h1 class="text-center border bg-info">Demands</h1>

    @if (Model.Demands != null && Model.Demands.Any())
    {
        for (var i = 0; i < Model.Demands.Count; i++)
        {
            var demand = Model.Demands[i];
            <div class="card mb-3">
                <div>
                    <p class="card-text font-weight-bold"> @(i + 1)-</p>
                    <p class="card-text">Description: @demand.Description</p>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-muted">No demands associated with this complaint.</p>
    }
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
